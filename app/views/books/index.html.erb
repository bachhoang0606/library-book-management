<div class="container">
    <p id="notice"><%= notice %></p>
    
    <h1 class="text-center">Books</h1>
    
    <table class="table">
      <thead class="table-light">
        <tr>
          <th>名前</th>
          <th>カテゴリ</th>
          <th>出版社</th>
          <th>著者</th>
          <th>年</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.name %></td>
            <td><%= book.category.name %></td>
            <td><%= book.publisher.name %></td>
            <%
=begin%>
 <td><%= book.author.name %></td> 
<%
=end%>
            <td><%= book.year %></td>
            <td><%= link_to '見せる', book %></td>
            <td><%= link_to '編集', edit_book_path(book) %></td>
            <td><%= link_to '破壊', book, method: :delete, data: { confirm: '本気ですか?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    <div class="text-center">
        <%= link_to '新しい本', new_book_path %>
    </div>
</div>
