<div class="container">
<%= link_to "sign out", destroy_reader_session_path , method: :delete %>

<h2>Readers manage</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">name</th>
            <th scope="col">email</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @readers.each do |reader| %>
        <tr>
            <td><%= reader.name %></td>
            <td><%= reader.email %></td>
            <td><%= link_to "show", reader %></td>
            <td><%= link_to "edit", edit_reader_path(reader) %></td>
            <td><%= link_to "delete", reader, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>
    <p></p>
    <%= link_to "create new reader", new_reader_path %>
</div>