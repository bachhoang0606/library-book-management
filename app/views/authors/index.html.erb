
<p id="notice"><%= notice %></p>

<h1 class="text-center">著者</h1>
<br>
<br>
<section class="intro">
  <div class="bg-image h-100">
    <div class="mask d-flex align-items-center h-100" >
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12">
            <div class="card">
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover mb-0">
                    <thead>
                      <tr>
                        <th scope="col">名前</th>
                        <th scope="col">ウェブサイト</th>
                        <th scope="col">ノート</th>
                        <th scope="col" colspan="3"></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @authors.each do |author| %>
                        <tr>
                          <th scope="row"><%= author.name %></th>
                          <td><%= author.website %></td>
                          <td><%= author.note %></td>
                          <td><%= link_to '見せる', author %></td>
                          <td><%= link_to '編集', edit_author_path(author) %></td>
                          <td><%= link_to '破壊', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<br>
<div class="text-center">
  <%= link_to '新しい著者', new_author_path, class: "btn btn-outline-secondary", style: "min-height:12px;min-width:150px;" %>
</div>