<p id="notice"><%= notice %></p>

<h1>本レビュー</h1>

<table>
  <thead>
    <tr>
      <th>本</th>
      <th>レビュー</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_reviews.each do |book_review| %>
      <tr>
        <td><%= book_review.book_id %></td>
        <td><%= book_review.review %></td>
        <td><%= link_to '見せる', book_review %></td>
        <td><%= link_to '編集', edit_book_review_path(book_review) %></td>
        <td><%= link_to '破壊', book_review, method: :delete, data: { confirm: '本気ですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しい本レビュー', new_book_review_path %>
