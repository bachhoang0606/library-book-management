<div class="form_container">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3 row enter">
      <%= f.label :email, class:"col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control-plaintext form-control" %>
      </div>
    </div>
  
    <div class="mb-3 row enter">
      <%= f.label :password, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control-plaintext form-control" %>
      </div>

    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="mb-3 form-check">
        <%= f.check_box :remember_me ,class:"form-check-input"%>
        <%= f.label :remember_me, class:"form-check-label" %>
      </div>
    <% end %>
  
    <div class="actions enter">
      <%= f.submit "Log in", class:"btn btn-primary" %>
    </div>
  <% end %>
  <div class="actions">
    <%= render "admins/shared/links" %>
  </div>
</div >


<style>
  .form_container {
    width: 50%;
    min-height: 600px;
    margin-left: 25%;
    border: 1px solid #ccc;
    border-radius: 10px;
  }
  .form_container h2,
  .form_container .actions {
    text-align: center;
  }

  .form_container .enter {
    padding:30px 10px;
  }

  .form-control{
    border: 1px solid #ccc;
  }
</style>

