<div class="form_container">
  <h2>Forgot your password?</h2>
  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "admins/shared/error_messages", resource: resource %>
  
    <div class="mb-3 row enter">
      <%= f.label :email, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control-plaintext form-control" %>
      </div>
    </div>
  
    <div class="actions enter">
      <%= f.submit "Send me reset password instructions", class:"btn btn-primary" %>
    </div>
  <% end %>
  
  <div class="actions">
    <%= render "admins/shared/links" %>
  </div>
</div>


<style>
  .form_container {
    width: 50%;
    min-height: 400px;
    margin-left: 25%;
    border: 1px solid #ccc;
    border-radius: 10px;
  }
  .form_container h2,
  .form_container .actions {
    text-align: center;
  }

  .form_container .enter {
    padding:30px 10px;
  }

  .form-control{
    border: 1px solid #ccc;
  }
</style>